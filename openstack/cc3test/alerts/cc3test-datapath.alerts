groups:
- name: cc3test-datapath.alerts
  rules:
  - alert: CCloudDatapathDown
    expr: |
        cc3test_status{type="datapath",
            name!~"TestDnsLookup_(bind|public).+",
            name!~"TestF5_(datapath|mcp).+"
        } == 0
    for: 10m
    labels:
      severity: critical
      tier: os
      service: '{{ $labels.service }}'
      context: '{{ $labels.service }}'
      dashboard: 'cc3test-overview?var-service={{ $labels.service }}'
      meta: '{{ $labels.name }} datapath is not responding'
      report: 'cc3test/admin/object-storage/containers/cc3test/list/reports/{{ $labels.type }}'
      playbook: 'docs/devops/alert/{{ $labels.service }}'
    annotations:
      description: '{{ $labels.name }} datapath is not responding'
      summary: '{{ $labels.name }} datapath is down'

  - alert: CCloudDatapathFlapping
    expr: |
        changes(cc3test_status{type="datapath",
            name!~"TestDnsLookup_(bind|public).+",
            name!~"TestF5_(datapath|mcp).+"
        }[30m]) > 8
    labels:
      severity: critical
      tier: os
      service: '{{ $labels.service }}'
      context: '{{ $labels.service }}'
      dashboard: 'cc3test-overview?var-service={{ $labels.service }}'
      meta: '{{ $labels.name }} datapath is flapping'
      report: 'cc3test/admin/object-storage/containers/cc3test/list/reports/{{ $labels.type }}'
      playbook: 'docs/devops/alert/{{ $labels.service }}'
    annotations:
      description: '{{ $labels.name }} datapath is flapping'
      summary: '{{ $labels.name }} datapath is flapping'

  - alert: CCloudDnsBindLookupDown
    expr: |
        (sum by (type, service) (cc3test_status{type="datapath", name=~"TestDnsLookup_bind.+"})
        /
        count by (type, service) (cc3test_status{type="datapath", name=~"TestDnsLookup_bind.+"})) == 0
    for: 10m
    labels:
      severity: critical
      tier: os
      service: '{{ $labels.service }}'
      context: '{{ $labels.service }}'
      dashboard: 'cc3test-overview?var-service={{ $labels.service }}'
      meta: 'All bind lookups failing'
      report: 'cc3test/admin/object-storage/containers/cc3test/list/reports/{{ $labels.type }}'
      playbook: 'docs/devops/alert/{{ $labels.service }}'
    annotations:
      description: 'All bind lookups failing'
      summary: 'All bind lookups failing'

  - alert: CCloudDnsBindLookupDown
    expr: |
        (sum by (type, service) (cc3test_status{type="datapath", name=~"TestDnsLookup_bind.+"})
        /
        count by (type, service) (cc3test_status{type="datapath", name=~"TestDnsLookup_bind.+"})) > 0 < 0.2
    for: 10m
    labels:
      severity: warning
      tier: os
      service: '{{ $labels.service }}'
      context: '{{ $labels.service }}'
      dashboard: 'cc3test-overview?var-service={{ $labels.service }}'
      meta: 'More than 80% of the bind lookups failing'
      report: 'cc3test/admin/object-storage/containers/cc3test/list/reports/{{ $labels.type }}'
      playbook: 'docs/devops/alert/{{ $labels.service }}'
    annotations:
      description: 'More than 80% of the bind lookups failing'
      summary: 'More than 80% of the bind lookups failing'

  - alert: CCloudDnsPublicLookupDown
    expr: |
        (sum by (type, service) (cc3test_status{type="datapath", name=~"TestDnsLookup_public_dns.+"})
        /
        count by (type, service) (cc3test_status{type="datapath", name=~"TestDnsLookup_public_dns.+"})) == 0
    for: 10m
    labels:
      severity: critical
      tier: os
      service: '{{ $labels.service }}'
      context: '{{ $labels.service }}'
      dashboard: 'cc3test-overview?var-service={{ $labels.service }}'
      meta: 'All public dns lookups failing'
      report: 'cc3test/admin/object-storage/containers/cc3test/list/reports/{{ $labels.type }}'
      playbook: 'docs/devops/alert/{{ $labels.service }}'
    annotations:
      description: 'All public dns lookups failing'
      summary: 'All public dns lookups failing'

  - alert: CCloudDnsPublicLookupDown
    expr: |
        (sum by (type, service) (cc3test_status{type="datapath", name=~"TestDnsLookup_public_dns.+"})
        /
        count by (type, service) (cc3test_status{type="datapath", name=~"TestDnsLookup_public_dns.+"})) >0 < 0.2
    for: 10m
    labels:
      severity: warning
      tier: os
      service: '{{ $labels.service }}'
      context: '{{ $labels.service }}'
      dashboard: 'cc3test-overview?var-service={{ $labels.service }}'
      meta: 'More than 80% of the public dns lookups failing'
      report: 'cc3test/admin/object-storage/containers/cc3test/list/reports/{{ $labels.type }}'
      playbook: 'docs/devops/alert/{{ $labels.service }}'
    annotations:
      description: 'More than 80% of the public dns lookups failing'
      summary: 'More than 80% of the public dns lookups failing'
